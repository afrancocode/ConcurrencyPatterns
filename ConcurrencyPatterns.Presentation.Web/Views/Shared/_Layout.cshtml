<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - Concurrency Project</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/jquery")
	
	<script>
		$(document).ready(function () {
			@if (TempData["concurrencyError"] != null)
			{
				<text>
					$("#dialog").dialog({
						height: 250,
						width: 400,
						modal: true
					});
				</text>
			}
		});
	</script>

</head>

<body>
	<div class="header">
		<h1><a class="header-title header-left" href="@Url.Action("Index","Home")">Concurrency Prototype</a></h1>
		@Html.Partial("_LoginPartial")
	</div>

	<div class="container body-content">
		@RenderBody()
		<hr />
		<footer>
			<p>&copy; @DateTime.Now.Year - Code Services Co.</p>
		</footer>
	</div>

	<div id="dialog" title="Concurrency Error" style="display:none">
		<p>You cannot modify the specified product because someone else modified before your changes.</p>
		<br />
		@Html.ActionLink("Back to List", "Index")
	</div>

</body>
</html>