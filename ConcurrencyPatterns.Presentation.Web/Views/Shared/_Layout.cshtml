<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - Concurrency Project</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/jquery")
	<link href="~/Content/themes/smoothness/jquery-ui.css" rel="stylesheet" />
	<script src="/Scripts/uihandling.js"></script>

	<script>
		@if (TempData["concurrencyError"] != null)
			{
				<text>
					$(document).ready(function () {
						$("#dialogError").dialog({
							modal: true
						});
					});
				</text>
			}		
	</script>

</head>

<body>
	<div class="header">
		<h1><a class="header-title header-left" href="@Url.Action("Index","Home")">Concurrency Prototype</a></h1>
		@Html.Partial("_LoginPartial")
	</div>
	<div class="body-content">
		<div class="leftMenu">
			@Html.Partial("_LeftMenu")
		</div>
		<div class="content">
			@RenderBody()
		</div>
	</div>
	<div class="footer">
		<footer>
			<p>&copy; @DateTime.Now.Year - Code Services Co.</p>
		</footer>
	</div>
	<div id="dialogError" title="Concurrency Error" style="display:none">
		<p>You cannot modify the specified product because someone else modified before your changes.</p>
		<br />
		@Html.ActionLink("Back to List", "Index")
	</div>

</body>
</html>