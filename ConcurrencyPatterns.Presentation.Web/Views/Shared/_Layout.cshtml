<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - Concurrency Project</title>
	<link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
	@*<link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />*@
	@*<script src="~/Scripts/modernizr-2.6.2.js"></script>*@
	<script src="~/Scripts/jquery-1.10.2.min.js"></script>
	@*<script src="~/Scripts/bootstrap.min.js"></script>*@

	<script>
		$(document).ready(function () {
			if (cookieExists()) {
				$('#logout').show();
			}
			else {
				$('#logout').hide();
			}

			function cookieExists() {
				var name = "SessionInfo" + "=";
				var allCookies = document.cookie.split(';');
				for (var i = 0; i < allCookies.length; i++) {
					var c = allCookies[i];
					while (c.charAt(0) == ' ') c = c.substring(1);
					if(c.indexOf(name) == 0) return true;
				}
				return false;
			}
		});
	</script>

</head>

<body>
	<div id="header">
		<h1><a id="title" href="@Url.Action("Index","Home")">Concurrency Prototype</a></h1>
		<ul id="logout" class="nav navbar-nav">
			<li> @Html.ActionLink("Logout", "Logout", "Home")</li>
		</ul>
	</div>

	<div class="container body-content">
		@RenderBody()
		<hr />
		<footer>
			<p>&copy; @DateTime.Now.Year - Code Services Co.</p>
		</footer>
	</div>

	
</body>
</html>