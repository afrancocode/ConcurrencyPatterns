@model ConcurrencyPatterns.Presentation.Web.Models.ProductViewModel

@{
	ViewBag.Title = "Edit";
}
@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	@Html.ValidationSummary(true)
	<div>
		@Html.LabelFor(model => model.Name)
		<div>
			@Html.EditorFor(model => model.Name)
			@Html.ValidationMessageFor(model => model.Name)
		</div>
	</div>

	<div>
		@Html.LabelFor(model => model.Description)
		<div>
			@Html.EditorFor(model => model.Description)
			@Html.ValidationMessageFor(model => model.Description)
		</div>
	</div>

	<div>
		@Html.LabelFor(model => model.Stock)
		<div>
			@Html.EditorFor(model => model.Stock)
			@Html.ValidationMessageFor(model => model.Stock)
		</div>
	</div>
	@Html.HiddenFor(model => model.Version.Id)
	@Html.HiddenFor(model => model.Version.Value)
	@Html.HiddenFor(model => model.Version.ModifiedBy)
	@Html.HiddenFor(model => model.Version.Modified)
	<div>
		<input type="submit" value="Save" class="btn btn-default" />
	</div>
}